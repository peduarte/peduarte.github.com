* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}


body {
  font-family: $fontDefault;
  font-size: $fontBase;
  line-height: 1.6250em; /* 26px */
  font-smoothing: antialiased;

  {baseline-grid};
}


a {
  color: $colorBlack;
  text-decoration: none;
  font-weight: 700;
}


main {
  background: $colorYellow;
  transition: background-color 600ms linear;
  position: relative;
  overflow: hidden;

  opacity: 0;
  animation: fadeIn 2000ms 800ms ease-in-out both;

  +above(5) {
    margin-left: 50%;
    opacity: 1;
    width: 0;
    animation: slideMain 800ms 2200ms forwards cubic-bezier(0.55, 0.055, 0.675, 0.19);
  }


}
