* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}


body {
  font-family: $fontDefault;
  font-size: $fontBase;
  line-height: 26px;
  font-smoothing: antialiased;

  {baseline-grid};
}


a {
  color: $colorBlack;
  text-decoration: none;
  font-weight: 700;
}


main {
  background: $colorYellow;
  transition: background-color 600ms linear;
  position: relative;
  overflow: hidden;

  +above(5) {
    margin-left: 50%;
    opacity: 1;
    width: 0;
    animation: slideMain 800ms 2000ms forwards cubic-bezier(0.55, 0.055, 0.675, 0.19);
  }
}


.GridToggler {
  background: transparent;
  text-indent: -9999em;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 2;
  display: block;
  width: ($lineHeight/2);
  appearance: none;
  outline: none;
  border: none;
  overflow: hidden;
  box-sizing: content-box;
  transition: width 350ms ease-out;
  cursor: pointer;

  span {
    height: 1px;
    width: 100%;
    display: block;
    background: rgba($colorBlack, .2);
    margin: 2px 0;
    transition: background 350ms ease-out;

    .debug & {
      background-color: $colorBlack;
    }
  }

  .debug &,
  &:hover {
    width: $lineHeight*2;
  }

}
