* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

html, body {
  min-height: 100%;
}

body {
  font-family: $fontDefault;
  font-size: $fontBase;
  line-height: 26px;
  font-smoothing: antialiased;
  background: $colorYellow;
  color: $colorBlack;
  height: 100%;

  {baseline-grid};
}


a {
  color: $colorBlack;
  text-decoration: none;
  font-weight: 700;
}


main {
  background: $colorBlack;
  transition: background-color 600ms linear;

  &,
  a {
    color: $colorWhite;
  }

  +above(5) {
    .no-js & {
      margin-left: 50%;
    }

    .cssanimations & {
      margin-left: 0;
      transform: translate3d(calc(-100% - 100px), 0, 0);
      animation: slideMain 1400ms 600ms forwards cubic-bezier(0.77, 0, 0.175, 1);


    }
  }

}

.animation-fold {
  +above(5) {
    .cssanimations & {
      content: "";
      display: block;
      position: fixed;
      top: 0;
      bottom: 0;
      right: 0;
      width: 100px;
      background: black;
      border-radius: 0 100% 100% 0;
      left: -100px;
      transform: translate3d(0, 0, 0);
      animation: slideFold 1400ms 600ms forwards cubic-bezier(0.77, 0, 0.175, 1);
    }
  }
}
