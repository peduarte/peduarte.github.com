.Header {
  padding: $lineHeight $lineHeight $lineHeight*2;

  +above(3) {
    padding: $lineHeight $lineHeight*2 $lineHeight*2;
  }

  +above(4) {
    padding: $lineHeight*2 $lineHeight*3 $lineHeight*3;
  }

  +above(5) {
    padding-top: 0;
    padding-bottom: 0;
    position: fixed;
    height: 100%;
    width: 50%;
    top: 0;
    bottom: 0;

    &:before {
      content: "";
      position: absolute;
      top: 50%;
      right: 0;
      width: 3px;
      height: 0;
      background: $colorYellow;
      transform: translateY(-50%);
      animation: expandBar 1000ms 1000ms forwards $easeInQuart;
    }
  }
}


.Header-content {
  +above(5) {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    max-width: 475px;
  }
}

.Header-title {
  position: relative;
  padding-bottom: $lineHeight;
  margin-bottom: $lineHeight;
  text-transform: uppercase;
  opacity: 0;
  animation: fadeIn 800ms 100ms ease-in-out forwards;

  &:after {
    content: "";
    width: 100%;
    max-width: $lineHeight * 4;
    height: 10px;
    background: $colorBlack;
    position: absolute;
    left: 0;
    bottom: 0;
  }
}

.Header-subtitle {
  font-weight: 700;
  opacity: 0;
  animation: fadeIn 800ms 400ms ease-in-out forwards;
}

.Header-intro {
  padding: 0;
  margin-bottom: $lineHeight;
  opacity: 0;
  animation: fadeIn 800ms 700ms ease-in-out forwards;
}
