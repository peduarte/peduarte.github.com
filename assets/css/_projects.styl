.Projects {
	list-style: none;
	padding: $lineHeight;



	+above(3) {
		padding: $lineHeight*2;
	}

	+above(4) {
		padding: $lineHeight $lineHeight*3;

	}

	+above(5) {
    padding-top: $lineHeight;
		padding-bottom: $lineHeight;

    opacity: 0;
    animation: showProjects 1200ms 2800ms forwards;
	}
}

.Project-item {
  position: relative;
}

.Project-link {
	display: block;
	border-bottom: 1px solid $colorBlack;
	padding: $lineHeight 0 ($lineHeight - 1);
  font-weight: normal
  transition: box-shadow 400ms $easeOutQuart;

  &:hover {
    box-shadow: inset 0 -3px 0 0 black;
  }
}

.Project-client {
	text-transform: uppercase;
	type--large(false); // set false to stop resizing on media queries
	padding: 0;
}

.Project-name {
	padding: 0;
	display: inline-block;
}
